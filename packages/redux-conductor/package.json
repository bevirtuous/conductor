{
  "name": "@virtuous/redux-conductor",
  "version": "0.1.0",
  "description": "A redux bridge for Conductor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/virtuous/redux-conductor.git"
  },
  "bugs": {
    "url": "https://gitlab.com/virtuous/redux-conductor/issues"
  },
  "homepage": "https://gitlab.com/virtuous/redux-conductor",
  "keywords": [
    "react",
    "conductor",
    "router",
    "routing",
    "redux"
  ],
  "contributors": [
    "Florian MÃ¼ller <florian.mueller81@gmx.de> (https://github.com/devbucket)",
    "Richard Gorman <richardgorman@outlook.com> (https://github.com/richardgorman)"
  ],
  "main": "./index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha",
    "cover": "rimraf ./build ./.nyc_output && NODE_ENV=test nyc mocha",
    "build": "rimraf ./dist && NODE_ENV=production babel src --out-dir dist && git add -A",
    "lint": "eslint --parser babel-eslint --ignore-path .gitignore --ignore-path .eslintignore  --ext .js .",
    "lint-staged": "lint-staged",
    "preversion": "npm test",
    "version": "npm run build && git add -A",
    "postversion": "git push && git push --tags"
  },
  "lint-staged": {
    "*.js": "eslint --parser babel-eslint --ignore-path .gitignore --ignore-path .eslintignore  --ext .js ."
  },
  "devDependencies": {
    "@virtuous/conductor": "^0.0.1",
    "@virtuous/conductor-events": "^0.0.1",
    "@virtuous/eslint-config": "^1.3.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-runtime": "^6.26.0",
    "coveralls": "^3.0.0",
    "jsdom": "^11.3.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^5.0.0",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "pre-commit": "^1.2.2",
    "redux": "^3.7.2",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.2"
  },
  "peerDependencies": {
    "redux": "^3.7.2"
  },
  "pre-commit": [
    "lint-staged",
    "build"
  ],
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "build",
      "test",
      "dist",
      ".nyc_output",
      "node_modules",
      "./action-creators.js",
      "./index.js",
      "./reducer.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true,
    "report-dir": "build"
  }
}
