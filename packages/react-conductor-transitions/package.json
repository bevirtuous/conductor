    "nyc": "^11.3.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2"
  },
  "pre-commit": [
    "lint-staged",
    "build"
  ],
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "build",
      "test",
      "dist",
      ".nyc_output",
      "node_modules"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true,
    "report-dir": "build"
